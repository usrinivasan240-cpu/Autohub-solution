# AutoHub Solutions - Environment Variables

# Database (PostgreSQL recommended for production)
DATABASE_URL="postgresql://user:password@localhost:5432/autohub?schema=public"

# For development, you can use SQLite
# DATABASE_URL="file:./dev.db"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Email Configuration (for contact form)
EMAILJS_SERVICE_ID="your-emailjs-service-id"
EMAILJS_TEMPLATE_ID="your-emailjs-template-id"
EMAILJS_PUBLIC_KEY="your-emailjs-public-key"

# WhatsApp Business API (for future integration)
WHATSAPP_BUSINESS_PHONE_ID="your-whatsapp-business-phone-id"
WHATSAPP_BUSINESS_TOKEN="your-whatsapp-business-token"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="AutoHub Solutions"
NEXT_PUBLIC_SUPPORT_EMAIL="support@autohub.in"
NEXT_PUBLIC_SUPPORT_PHONE="+91-XXXXX-XXXXX"

# Analytics & Tracking (optional)
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
